<div>
  <div>
    <h1>
      Your todo list
    </h1>
  </div>
</div>


<div>
  <div>
    <h2>
      Add a new todo
    </h2>

    <form action="/insert_to_do" method="post">
      <div>
        <label for="content_box">
          Descripbe the task:
        </label>

        <input id="content_box" name="query_content" rows="3">
      </div>
      <button>
        Add to Next Up
      </button>
    </form>
  </div>
</div>

<div class="next_up">
  <h2>Next Up</h2>

  <ul>
    
      <% @list_of_to_dos.each do |a_todo|  %>
      <li>
        <div><%= a_todo.content %></div>

        <small>
          <%= time_ago_in_words(a_todo.created_at)%>

          <a href="/delete_to_do/<%= a_todo.id %>">Delete</a>
        </small>

        <form action="/modify_to_do/<%= @list_of_to_dos %>" method="post">
          <input type="hidden" name="query_status" value="in_progress">
          <button>Move to In Progress</button>
        </form>
      </li>
      <% end %>
     
  </ul>
</div>

<div class="in_progress">

  <h2>In Progress</h2>

  <ul>
  </ul>
</div>

<div class="done">

  <h2>Done</h2>

  <ul>
  </ul>
</div>

  </body>
</html>

      
