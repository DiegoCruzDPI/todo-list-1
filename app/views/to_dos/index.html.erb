<div>
  <div>
    <h1>
      List of all to dos
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new to do
    </h2>

    <form action="/insert_to_do" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="content_box">
          Content
        </label>

        <textarea id="content_box" name="query_content" rows="3"></textarea>
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status">
      </div>

      <button>
        Create to do
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Content
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_to_dos.each do |a_to_do| %>
      <tr>
        <td>
          <%= a_to_do.id %>
        </td>

        <td>
          <%= a_to_do.user_id %>
        </td>

        <td>
          <%= a_to_do.content %>
        </td>

        <td>
          <%= a_to_do.status %>
        </td>

        <td>
          <%= time_ago_in_words(a_to_do.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_to_do.updated_at) %> ago
        </td>

        <td>
          <a href="/to_dos/<%= a_to_do.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
