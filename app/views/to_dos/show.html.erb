<div>
  <div>
    <h1>
      To do #<%= @the_to_do.id %> details
    </h1>

    <div>
      <div>
        <a href="/to_dos">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_to_do/<%= @the_to_do.id %>">
          Delete to do
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @the_to_do.user_id %>
      </dd>

      <dt>
        Content
      </dt>
      <dd>
        <%= @the_to_do.content %>
      </dd>

      <dt>
        Status
      </dt>
      <dd>
        <%= @the_to_do.status %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_to_do.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_to_do.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit to do
    </h2>

    <form action="/modify_to_do/<%= @the_to_do.id %>"  method="post" >
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_to_do.user_id %>">
      </div>

      <div>
        <label for="content_box">
          Content
        </label>

        <textarea id="content_box" name="query_content"><%= @the_to_do.content %></textarea>
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status" value="<%= @the_to_do.status %>">
      </div>

      <button>
        Update to do
      </button>
    </form>
  </div>
</div>

<hr>
